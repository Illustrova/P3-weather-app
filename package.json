{
  "name": "p3-weather",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write '**/*.{tsx, ts}'",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "^3.24.4"
  },
  "devDependencies": {
    "@types/react": "17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "lint-staged": "^11.1.2",
    "simple-git-hooks": "^2.4.1",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.tsx": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  }
}
